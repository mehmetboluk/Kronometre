<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

   <Chronometer
       android:id="@+id/kronometre"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="100dp"
       android:text="00:00"
       android:textAlignment="center"
       android:textColor="@color/white"
       android:textSize="40sp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <ImageView
       android:id="@+id/ivStart"
       android:layout_width="200dp"
       android:layout_height="200dp"
       android:layout_marginTop="98dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/kronometre"
       app:srcCompat="@drawable/start" />

   <ImageView
       android:id="@+id/ivReset"
       android:layout_width="124dp"
       android:layout_height="120dp"
       android:layout_marginTop="12dp"
       app:layout_constraintEnd_toEndOf="@+id/ivStart"
       app:layout_constraintHorizontal_bias="1.0"
       app:layout_constraintStart_toStartOf="@+id/ivStart"
       app:layout_constraintTop_toBottomOf="@+id/ivStart"
       app:srcCompat="@drawable/reset" />

   <Button
       android:id="@+id/btnStart"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="START"
       android:visibility="visible"
       android:textSize="24sp"
       android:textStyle="bold"
       app:layout_constraintBottom_toBottomOf="@+id/ivStart"
       app:layout_constraintEnd_toEndOf="@+id/ivStart"
       app:layout_constraintStart_toStartOf="@+id/ivStart"
       app:layout_constraintTop_toTopOf="@+id/ivStart" />

   <Button
       android:id="@+id/btnStop"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="STOP"
       android:visibility="invisible"
       android:textSize="24sp"
       android:textStyle="bold"
       app:layout_constraintBottom_toBottomOf="@+id/ivStart"
       app:layout_constraintEnd_toEndOf="@+id/ivStart"
       app:layout_constraintStart_toStartOf="@+id/ivStart"
       app:layout_constraintTop_toTopOf="@+id/ivStart" />

   <Button
       android:id="@+id/btnReset"
       android:layout_width="81dp"
       android:layout_height="49dp"
       android:cursorVisible="false"
       android:text="RESET"
       android:textAllCaps="false"
       android:textSize="12sp"
       android:textStyle="bold"
       app:cornerRadius="@null"
       app:layout_constraintBottom_toBottomOf="@+id/ivReset"
       app:layout_constraintEnd_toEndOf="@+id/ivReset"
       app:layout_constraintStart_toStartOf="@+id/ivReset"
       app:layout_constraintTop_toTopOf="@+id/ivReset" />

</androidx.constraintlayout.widget.ConstraintLayout>